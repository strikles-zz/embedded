#ifndef SENSORS_H_
#define SENSORS_H_

#include <stdint.h>

// brightness
typedef enum {
	dark,
	average,
	bright,
	max_brightness_levels
}  eBrightness;

// sensors
typedef enum {
	battery,
	brightness,
	humidity,
	noise,
	personsPassed,
	temperature,
	max_sensors
} eSensor;

const char* brightness_str[] = {
	"dark",
	"average",
	"bright",
	"max_brightness"
};

const char* sensor_str[] = {
	"battery",
	"brightness",
	"humidity",
	"noise",
	"personsPassed",
	"temperature",
	"max_sensors"
};

typedef struct {
	int value;
	int elapsed;
	int interval;

} Reading_t;

int newMeasurement(eSensor s);
uint16_t getSensorReadingStr(eSensor s, char buffer[]);
uint16_t generateMeasurements(void);

#endif /* SENSORS_H_ */
