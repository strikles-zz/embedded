#ifndef CLIENT_H_
#define CLIENT_H_

// generic
typedef enum {
	true,
	false
} eBool;

typedef enum {
	retrieve,
	update
} eRequest;

// brightness
typedef enum {
	dark,
	average,
	bright,
	max_brightness_levels
}  eBrightness;

// sensors
typedef enum {
	battery,
	brightness,
	humidity,
	noise,
	personsPassed,
	temperature,
	max_sensors
} eSensors;

typedef struct {
	short value;
	short elapsed;
	short interval;

} Reading_t;

#define CLI_MODE update;

const char* request_str[] = {
	"retrieve",
	"update"
};

const char* brightness_str[] = {
	"dark",
	"average",
	"bright",
	"max_brightness"
};

const char* sensor_str[] = {
	"battery",
	"brightness",
	"humidity",
	"noise",
	"personsPassed",
	"temperature",
	"max_sensors"
};

uint16_t buildRequestXML(ezxml_t request_root);
uint16_t newMeasurement(Sensor_t m);
uint16_t getMeasurement(Sensor_t m);
uint16_t generateMeasurements();

#endif /* CLIENT_H_ */
