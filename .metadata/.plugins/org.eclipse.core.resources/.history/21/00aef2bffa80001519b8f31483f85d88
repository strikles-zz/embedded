#ifndef CLIENT_H_
#define CLIENT_H_

// generic
typedef enum {
	true,
	false
} eBool;

typedef enum {
	retrieve,
	update
} eRequest;

// brightness
typedef enum {
	dark,
	average,
	bright,
	max_brightness_levels
}  eBrightness;

// sensors
typedef enum {
	battery,
	brightness,
	humidity,
	noise,
	personsPassed,
	temperature,
	max_sensors
} eSensor;

typedef struct {
	short value;
	short elapsed;
	short interval;

} Reading_t;

#define CLI_MODE update;

const char* request_str[] = {
	"retrieve",
	"update"
};

const char* brightness_str[] = {
	"dark",
	"average",
	"bright",
	"max_brightness"
};

const char* sensor_str[] = {
	"battery",
	"brightness",
	"humidity",
	"noise",
	"personsPassed",
	"temperature",
	"max_sensors"
};

uint16_t buildRequestXML(ezxml_t request_root);
uint16_t buildRandomRequestXML(ezxml_t request_root);
uint16_t newMeasurement(eSensor s);
uint16_t getSensorReadingStr(eSensor s, char buffer[]);
uint16_t generateMeasurements(void);

#endif /* CLIENT_H_ */
