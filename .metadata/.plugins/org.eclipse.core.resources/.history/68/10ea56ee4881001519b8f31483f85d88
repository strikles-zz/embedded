#ifndef SERVER_H_
#define SERVER_H_

// generic
typedef enum {
	true,
	false
} eBool;

typedef enum {
	retrieve,
	update
} eRequest;

// brightness
typedef enum {
	dark,
	average,
	bright,
	max_brightness_levels
}  eBrightness;

// sensors
typedef enum {
	battery,
	brightness,
	humidity,
	noise,
	personsPassed,
	temperature,
	max_sensors
} eSensor;

const char* request_str[] = {
	"retrieve",
	"update"
};

const char* brightness_str[] = {
	"dark",
	"average",
	"bright",
	"max_brightness"
};

const char* sensor_str[] = {
	"battery",
	"brightness",
	"humidity",
	"noise",
	"personsPassed",
	"temperature",
	"max_sensors"
};

//the thread function
void *connection_handler(void *);
uint16_t buildReplyXML(ezxml_t req_root, char sendline[]);

#endif /* SERVER_H_ */
