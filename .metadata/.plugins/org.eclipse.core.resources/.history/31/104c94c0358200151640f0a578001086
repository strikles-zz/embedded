#ifndef DEFINES_H_
#define DEFINES_H_

#define MAX_MSG_LEN 1024
#define SRV_PORT 6423
#define SRV_ADDR "127.0.0.1"

#include <stdlib.h>
#include <stdint.h>
#include <stdio.h>
#include <string.h>

/**
 *
 */
typedef enum {
	true,//!< true
	false//!< false
} eBool;

/**
 *
 */
typedef enum {
	configure,//!< configure
	retrieve, //!< retrieve
	update    //!< update
} eRequest;

/**
 *
 */ brightness
typedef enum {
	dark,
	average,
	bright,
	max_brightness_levels
}  eBrightness;

// sensors
typedef enum {
	battery,
	brightness,
	humidity,
	noise,
	personsPassed,
	temperature,
	max_sensors
} eSensor;

/**
 * Hold Sensor data
 */
typedef struct {
	int value;
	int elapsed;
	int interval;

} Reading_t;

extern const char const* request_str[];
extern const char const* brightness_str[];
extern const char const* sensor_str[];

#endif /* DEFINES_H_ */
