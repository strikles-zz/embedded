#ifndef CLIENT_H_
#define CLIENT_H_


typedef enum {
	true,
	false
} Bool_t;

typedef enum {
	retrieve,
	update
} Request_t;

typedef enum {
	dark,
	average,
	bright,
	max_brightness_levels
}  Brightness_t;

typedef enum {
	battery,
	brightness,
	humidity,
	noise,
	personsPassed,
	temperature,
	max_sensors
} Sensor_t;

typedef enum {
	value,
	elapsed,
	interval

} SensorReading_t;

#define CLI_MODE update;

const char* request_str[] = {
	"retrieve",
	"update"
};

const char* brightness_str[] = {
	"dark",
	"average",
	"bright",
	"max_brightness"
};

const char* sensors_str[] = {
	"battery",
	"brightness",
	"humidity",
	"noise",
	"personsPassed",
	"temperature",
	"max_sensors"
};

uint16_t buildRequestXML(ezxml_t request_root);
uint16_t newMeasurement(Sensor_t m);
uint16_t getMeasurement(Sensor_t m);
uint16_t generateMeasurements();

#endif /* CLIENT_H_ */
